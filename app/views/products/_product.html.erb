<p>
  <strong>Product <%= product_counter + 1%></strong>
</p>
<p>
  <strong>Ean:</strong>
  <%= product.ean %>
</p>
<p>
  <strong>Description:</strong>
  <%= product.description %>
</p>
<strong>Purchase price:</strong>
<%= product.purchase_price %>
</p>
<p>
<strong>Sale price:</strong>
<%= product.sale_price %>
</p>
<strong>Vat:</strong>
<%= product.vat %>
</p>

<p>
  <%= link_to 'Destroy Product', [product.supplier, product],
               method: :delete,
               data: { confirm: 'Are you sure it is a soft delete?' } %>
</p>
